// This is your Prisma schema file
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Rating {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  restaurantName   String
  burritoTitle     String
  latitude         Float
  longitude        Float
  rating           Float
  taste            Float
  value            Float
  price            Float
  hasPotatoes      Boolean  @default(false)
  hasCheese        Boolean  @default(false)
  hasBacon         Boolean  @default(false)
  hasChorizo       Boolean  @default(false)
  hasOnion         Boolean  @default(false)
  hasVegetables    Boolean  @default(false)
  review           String?
  reviewerName     String?
  identityPassword String?  // Hash of the password used to generate the emoji
  generatedEmoji   String?  // The emoji generated from the password hash
  reviewerEmoji    String?  // Custom emoji chosen by the user
}